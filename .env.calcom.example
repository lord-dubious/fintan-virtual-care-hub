# Cal.com Self-Hosted Configuration
# Copy this file to .env.calcom and update the values

# ==============================================
# REQUIRED: Database Configuration
# ==============================================
CALCOM_DATABASE_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://calcom:your_secure_database_password_here@localhost:5433/calcom

# ==============================================
# REQUIRED: Security Keys
# ==============================================
# Generate with: openssl rand -base64 32
CALCOM_NEXTAUTH_SECRET=your_nextauth_secret_here_32_chars_min
CALCOM_ENCRYPTION_KEY=your_encryption_key_here_32_chars_min

# ==============================================
# REQUIRED: Application URLs
# ==============================================
# Your Cal.com instance URL (where Cal.com will be accessible)
CALCOM_WEBAPP_URL=http://localhost:3001

# Your main application URL (where your existing app runs)
MAIN_APP_URL=http://localhost:3000

# ==============================================
# Daily.co Integration (Reuse existing)
# ==============================================
# Copy from your existing .env file
DAILY_API_KEY=your_daily_api_key_here
DAILY_SCALE_PLAN=false

# ==============================================
# Cal.com API Configuration
# ==============================================
# These will be generated after Cal.com setup
CALCOM_CLIENT_ID=
CALCOM_CLIENT_SECRET=
CALCOM_API_KEY=

# ==============================================
# Email Configuration (Optional)
# ==============================================
CALCOM_EMAIL_FROM=noreply@yourdomain.com
CALCOM_EMAIL_HOST=smtp.yourdomain.com
CALCOM_EMAIL_PORT=587
CALCOM_EMAIL_USER=your_email_user
CALCOM_EMAIL_PASSWORD=your_email_password

# ==============================================
# Integration Settings
# ==============================================
# Timezone for your application
TIMEZONE=UTC

# Default doctor/provider settings
DEFAULT_PROVIDER_NAME=Doctor Fintan Ekochin
DEFAULT_PROVIDER_EMAIL=doctor@yourdomain.com

# ==============================================
# Development Settings
# ==============================================
NODE_ENV=development
CALCOM_DEBUG=true

# ==============================================
# Webhook Configuration
# ==============================================
# Webhook endpoint in your main application
WEBHOOK_ENDPOINT=http://host.docker.internal:3000/api/calcom/webhooks
WEBHOOK_SECRET=your_webhook_secret_here

# ==============================================
# Redis Configuration (Optional)
# ==============================================
REDIS_URL=redis://localhost:6380
