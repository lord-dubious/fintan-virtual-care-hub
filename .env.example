# =============================================================================
# FINTAN VIRTUAL CARE HUB - FLEXIBLE ENVIRONMENT CONFIGURATION
# =============================================================================

# Application Settings
NODE_ENV="development"
PORT=3000
VITE_PORT=10000

# Server Binding Configuration
HOST="0.0.0.0"               # Bind to all interfaces (traditional server behavior)

# Backend Host Configuration (for URL construction)
# Leave empty for auto-detection, or set explicitly:

# For localhost development:
# BACKEND_HOST="localhost"

# For remote development:
# BACKEND_HOST="192.168.1.100"

# For hosted backend (Render, Railway, Vercel, etc.):
# BACKEND_HOST="your-app.onrender.com"
# BACKEND_HOST="your-app.railway.app"
# BACKEND_HOST="your-app.vercel.app"

# Auto-detection will use platform environment variables:
# - RENDER_EXTERNAL_HOSTNAME (Render.com)
# - RAILWAY_PUBLIC_DOMAIN (Railway)
# - VERCEL_URL (Vercel)
# - HEROKU_APP_NAME (Heroku)
# - FLY_APP_NAME (Fly.io)
# - HOST_IP (Custom)

# Frontend Configuration
FRONTEND_PORT=10000

# Database (Neon PostgreSQL)
DATABASE_URL="postgres://[USERNAME]:[PASSWORD]@[HOST].neon.tech/[DATABASE]?pgbouncer=true&connect_timeout=10"
DIRECT_URL="postgres://[USERNAME]:[PASSWORD]@[HOST].neon.tech/[DATABASE]?connect_timeout=10"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Daily.co Video Calling
DAILY_API_KEY="your-daily-api-key-here"
VITE_DAILY_DOMAIN="your-daily-domain"

# Payments
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
VITE_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Default Provider
VITE_DEFAULT_PROVIDER_ID="your-default-provider-id"

# Security & CORS (defaults to allow all origins)
# CORS_ORIGIN="https://yourdomain.com"  # Uncomment to restrict CORS to specific origin
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging & Features
LOG_LEVEL="info"
ENABLE_VIDEO_CALLS=true
ENABLE_AUDIO_CALLS=true
ENABLE_PAYMENTS=true

# Deployment
RUN_MIGRATIONS_ON_BUILD=true

# =============================================================================
# IMPORTANT: Understanding HOST vs BACKEND_HOST
# =============================================================================
#
# HOST="0.0.0.0"
# - This is the BIND ADDRESS - what network interfaces the server listens on
# - "0.0.0.0" means listen on ALL interfaces (traditional server behavior)
# - This allows connections from localhost, LAN, and external networks
# - Should almost always be "0.0.0.0" for servers
#
# BACKEND_HOST="your-domain.com"
# - This is for URL CONSTRUCTION - what clients use to reach the server
# - Used to build API URLs that frontend and external services call
# - Examples: "localhost", "192.168.1.100", "myapp.onrender.com"
# - This is what appears in logs and API documentation
#
# Example: Server binds to 0.0.0.0:3000 but clients connect to myapp.com:3000
# =============================================================================
