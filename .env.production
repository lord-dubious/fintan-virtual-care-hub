# Production Environment Configuration
# Fintan Virtual Care Hub

# Application
NODE_ENV=production
APP_NAME="Fintan Virtual Care Hub"
APP_VERSION=1.0.0
APP_URL=https://app.drfintan.com
VITE_BACKEND_URL=https://api.drfintan.com

# Server Configuration
FRONTEND_PORT=3000
BACKEND_PORT=10000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/fintan_production


# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-key-change-this
SESSION_MAX_AGE=86400000

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5

# CORS Configuration
CORS_ORIGIN=https://app.drfintan.com,https://admin.drfintan.com
CORS_CREDENTIALS=true

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/var/uploads/fintan
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Email Configuration (SendGrid/SMTP)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
EMAIL_FROM=noreply@drfintan.com
EMAIL_FROM_NAME="Fintan Virtual Care"

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/fintan/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME="Fintan Virtual Care Hub"

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/fintan.crt
SSL_KEY_PATH=/etc/ssl/private/fintan.key
FORCE_HTTPS=true

# CDN Configuration
CDN_URL=https://cdn.drfintan.com
STATIC_ASSETS_URL=https://static.drfintan.com

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Third-party Integrations
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Video Calling (if using Twilio Video)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_API_KEY=your-twilio-api-key
TWILIO_API_SECRET=your-twilio-api-secret

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=fintan-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600
STATIC_CACHE_TTL=86400

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_APPOINTMENTS=true
ENABLE_PAYMENTS=true
ENABLE_VIDEO_CALLS=true
ENABLE_MESSAGING=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We're performing scheduled maintenance. Please check back soon."

# API Rate Limiting
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=1000
API_BURST_LIMIT=50

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# Queue Configuration (for background jobs)
QUEUE_REDIS_URL=redis://localhost:6379/1
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3

# Notification Configuration
PUSH_NOTIFICATION_ENABLED=true
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# Compliance and Audit
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555
HIPAA_COMPLIANCE_MODE=true
GDPR_COMPLIANCE_MODE=true

# Load Balancer Configuration
TRUST_PROXY=true
PROXY_TIMEOUT=30000

# Graceful Shutdown
SHUTDOWN_TIMEOUT=10000
KEEP_ALIVE_TIMEOUT=5000

# Development/Debug (should be false in production)
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_SWAGGER=false
ENABLE_PLAYGROUND=false
